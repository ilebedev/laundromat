
<p>
<% if user_signed_in? %>
  <%= image_tag current_user.image , alt: "user image" %>
  Hi! Signed in as<%= current_user.first_name %>.
  We think your email is <%= current_user.email %>.
  Did we get that right?
<% else %>
  <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
  <br>
  <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2) %>
  <br>
  <% if Rails.env.development? %>
    <%= link_to "Sign in as Allie the Admin (dev only)",
                development_auth_path(provider: "development",
                                      uid: "1",
                                      first_name: "Allie",
                                      image: "http://www.alleycat.org/view.image?Id=4112",
                                      email: "none@none.com")%>
  <% end %>
<% end %>
