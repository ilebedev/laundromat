<div class="container col-xs-12 text-center streams">
	<h1>Invites</h1>
	<table class="table table-striped table-bordered text-left">
	  <tr>
		<th>Generated By</th>
		<th>Token</th>
		<th>Expiration Date</th>
	  </tr>
	 
	  <% @invites.each do |i| %>
	  <tr>
		<td><%= i.user.first_name %></td>
		<td><%= i.token %></td>
		<td><%= i.expiration_date %></td>
		<td><%= link_to 'Delete', invite_path(i),
			  method: :delete,
			  data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	  <% end %>
	</table>
    <%= link_to "Generate Invite", invites_path, method: :post %>
</div>