<!DOCTYPE html>
<html>
<head>
  <title>Laundromat</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <% if user_signed_in? %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% end %>
      <a class="navbar-brand" href="/">
        <span class="btn-lg" >
          <%= image_tag 'laundromat-icon.svg', class: 'icon' %>
          the laundromat
        </span>
      </a>
    </div>
    <div class="collapse navbar-collapse" id="navbar">
      <ul class="nav navbar-nav navbar-right">
        <% if user_is_at_least_user? %>
        <li>
          <%= link_to media_path, class: "btn-lg btn-square" do %>
            <%= icon 'play-circle' %>
            Watch
          <% end %>
        </li>
        <% end %>
        <% if user_is_at_least_admin? %>
        <li class="dropdown">
          <a href="#" class="dropdown_toggle btn-lg btn-square" data-toggle="dropdown" role="button" aria-expanded="false">
              <%= icon 'cog' %>
              Admin
              <span class="caret">
            </span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <%= link_to users_path do %>
                <%= icon 'users' %>
                List of users
              <% end %>
            </li>
            <li>
              <%= link_to streams_path do %>
                <%= icon 'film' %>
                List of streams
              <% end %>
            </li>
            <li>
              <%= link_to invites_path do %>
                <%= icon 'users' %>
                List of invites
              <% end %>
            </li>
          </ul>
        </li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown_toggle btn-lg btn-square" data-toggle="dropdown" role="button" aria-expanded="false">
            <%= image_tag current_user.image, class: "profile_picture" %>
            <%= current_user.first_name %>
            <span class="caret">
          </a>
          <ul class="dropdown-menu" role="menu">
            <% if user_is_at_least_user? %>
            <li>
              <%= link_to user_path(current_user) do %>
                <%= icon 'user' %>
                Profile
              <% end %>
            </li>
            <% end %>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <%= icon 'sign-out' %>
                Sign out
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
<% end %>

<main class="container">
  <% if notice %>
  <div class="alert alert-info alert-dismissable" role="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <%= notice %>
  </div>
  <% end %>

  <% if alert %>
  <div class="alert alert-danger alert-dismissable" role="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <%= alert %>
  </div>
  <% end %>

  <%= yield %>
</main>

</body>
</html>
