<!DOCTYPE html>
<html>
<head>
  <title>Laundromat</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
<nav class="navbar">
  <div class="container-fluid">
    <div class="navbar-header">
      <% if user_signed_in? %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% end %>
      <a class="navbar-brand" href="/">
        the laundromat
      </a>
    </div>
    <div class="collapse navbar-collapse" id="navbar">
      <ul class="nav navbar-nav navbar-right">
        <% if user_is_at_least_user? %>
        <li><%= link_to 'Watch', streams_path %></li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown_toggle" data-toggle="dropdown" role="button" aria-expanded="false">
            <%= image_tag current_user.image, class: "profile_picture" %>
            <%= current_user.first_name %>
            <span class="caret">
          </a>
          <ul class="dropdown-menu" role="menu">
            <% if user_is_at_least_user? %>
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <% end %>
            <% if user_is_at_least_admin? %>
              <li><%= link_to "All Users", users_path %></li>
            <% end %>
            <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
<% end %>

<main class="container">
  <% if notice %>
  <div class="alert alert-info alert-dismissable" role="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <%= notice %>
  </div>
  <% end %>

  <% if alert %>
  <div class="alert alert-danger alert-dismissable" role="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <%= alert %>
  </div>
  <% end %>

  <%= yield %>
</main>

</body>
</html>
