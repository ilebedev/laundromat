<tr>
  <td>
    <%= image_tag u.image, class: "profile_picture" %>
    <%= link_to u.first_name, u %>
    <span class="pull-right">
      <%= link_to 'Edit', edit_user_path(u), class: 'btn btn-info btn-xs' %>
      <%= link_to 'Become', user_become_path(u), class: 'btn btn-warning btn-xs',
          method: :post,
          data: { confirm: 'Are you sure you want to become ' +
                            u.first_name + ' the ' + u.role + '?' } %>
      <%= link_to 'Delete', user_path(u), class: 'btn btn-danger btn-xs',
          method: :delete,
          data: { confirm: 'Are you sure you want to delete ' +
                            u.first_name + ' the ' + u.role + '?' } %>
    </span>
  </td>
  <td><%= mail_to u.email %></td>
  <td><%= u.last_seen ? time_ago_in_words(u.last_seen, include_seconds: true) + ' ago' : 'never' %>
</tr>
