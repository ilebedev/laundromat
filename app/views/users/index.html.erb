<div class="container col-xs-12 text-center streams">
  <h1>List of Users</h1>

  <hr>

  <h2>Admins</h2>
  <table class="table table-striped  text-left">
    <tr>
      <th class="col-xs-5">Admin</th>
      <th class="col-xs-4">Email</th>
      <th class="col-xs-3">Last Seen</th>
    </tr>

    <% @users.select{ |u| u.role == 'admin' }.each do |u| %>
      <%= render "user_table_entry", u: u %>
    <% end %>
  </table>

  <hr>

  <h2>Users</h2>
  <table class="table table-striped text-left">
    <tr>
      <th class="col-xs-5">User</th>
      <th class="col-xs-4">Email</th>
      <th class="col-xs-3">Last Seen</th>
    </tr>
    <% @users.select{ |u| u.role == 'user' }.each do |u| %>
      <%= render "user_table_entry", u: u %>
    <% end %>
  </table>

  <hr>

  <h2>Guests</h2>
  <table class="table table-striped text-left">
    <tr>
      <th class="col-xs-5">Guest</th>
      <th class="col-xs-4">Email</th>
      <th class="col-xs-3">Last Seen</th>
    </tr>
    <% @users.select{ |u| u.role == 'guest' }.each do |u| %>
      <%= render "user_table_entry", u: u %>
    <% end %>
  </table>
</div>
