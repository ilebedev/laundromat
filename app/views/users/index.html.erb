<div class="container col-xs-12 text-center streams">
	<h1>Users</h1>
	<table class="table table-striped table-bordered text-left">
	  <tr>
		<th>Image</th>
		<th>First Name</th>
		<th>Email</th>
    <th>Role</th>
    <th>Last Seen</th>
	  </tr>
	 
	  <% @users.each do |u| %>
      <tr>
        <td><%= image_tag u.image, class: "profile_picture" %></td>
        <td><%= link_to u.first_name, u %></td>
        <td><%= u.email %></td>
        <td><%= u.role %>
        <td><%= u.last_seen ? time_ago_in_words(u.last_seen, include_seconds: true) + ' ago' : 'never' %>
        <td><%= link_to 'Edit', edit_user_path(u) %></td>
        <td><%= link_to 'Delete', user_path(u),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
	  <% end %>
	</table>
</div>